#lists-demo
    box-sizing border-box
    display grid
    grid-template-columns 1fr 1fr
    grid-row-gap 16px

    ul
        border 1px solid rgba(0, 0, 0, 0.1)

    .list
        max-width 600px


        &.graphic
            li
                display grid
                grid-template-columns auto 1fr
                grid-column-gap 32px

                span
                    background-color rgba(0,0,0,0.38)
                    width 24px
                    height 24px

                i
                    color rgba(0,0,0,0.38)
